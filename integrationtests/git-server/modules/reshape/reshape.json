{
  "name": "Reshape",
  "id_name": "reshape",
  "description": "Convert between wide and long formats",
  "category" : "Clean",
  "icon": "reshape",
  "help_url":"modules/clean/reshape",
  "parameters": [
    {
      "name": "",
      "id_name" : "direction",
      "type" : "menu",
      "options": [
        { "value": "widetolong", "label": "Wide to long" },
        { "value": "longtowide", "label": "Long to wide" },
        { "value": "transpose", "label": "Transpose" }
      ],
      "default": "widetolong"
    },
    {
      "name": "Row variable",
      "id_name": "colnames",
      "type": "column",
      "visible_if": {
        "id_name": "direction",
        "value": ["transpose"],
        "invert": true
      }
    },
    {
      "name": "",
      "id_name": "second_key",
      "type": "column",
      "visible_if": {
          "id_name": "has_second_key",
          "value": true
      }
    },
    {
      "name": "2nd row variable",
      "id_name": "has_second_key",
      "type": "checkbox",
      "visible_if": {
          "id_name": "direction",
          "value": ["longtowide"]
      }
    },
    {
      "name": "Column variable",
      "id_name" : "varcol",
      "type": "column",
      "visible_if": {
        "id_name": "direction",
        "value": ["longtowide"]
      }
    }
  ]
}

{
  "name": "Filter by condition",
  "id_name": "filter",
  "category" : "Analyze",
  "icon": "filter",
  "help_url":"modules/analyse/filter",
  "description": "Filter rows by combining simple conditions such as 'if text contains...' or 'if number is greater than...'",
  "param_schema": {
    "keep": { "type": "boolean", "default": true },
    "filters": {
      "type": "dict",
      "properties": {
        "operator": { "type": "string", "default": "and" },
        "filters": {
          "type": "list",
          "inner_dtype": {
            "type": "dict",
            "properties": {
              "operator": { "type": "string" },
              "subfilters": {
                "type": "list",
                "inner_dtype": {
                  "type": "dict",
                  "properties": {
                    "colname": { "type": "column" },
                    "condition": { "type": "string" },
                    "value": { "type": "string" },
                    "case_sensitive": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "parameters": [
    {
      "name": "",
      "id_name": "filters",
      "type": "custom"
    },
    {
      "name" : "",
      "id_name" : "keep",
      "type": "radio",
      "default": true,
      "options": [
        { "value": true, "label": "Keep" },
        { "value": false, "label": "Delete" }
      ]
    }
  ]
}

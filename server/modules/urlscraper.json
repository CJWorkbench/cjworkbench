{
  "name": "HTML scraper",
  "id_name": "urlscraper" ,
  "category" : "Scrape",
  "icon" : "scraper",
  "description" : "Scrape the entire HTML from a webpage to be able to search its content or monitor changes.",
  "loads_data": true,
  "help_url":"modules/scrape/html-scraper",
  "parameters": [
    {
      "name": "",
      "id_name": "urlsource",
      "type": "menu",
      "default": "paged",
      "options": [
        { "value": "paged", "label": "URL" },
        { "value": "list", "label": "List of URLs" },
        { "value": "column", "label": "Input column" }
      ]
    },
    {
      "name": "",
      "id_name" : "urlcol",
      "type": "column",
      "visible_if": {
        "id_name": "urlsource",
        "value": [ "column" ]
      }
    },
    {
      "name": "",
      "id_name": "urllist",
      "type": "string",
      "multiline": true,
      "placeholder": "Enter URLs here, each on one line.",
      "visible_if": {
        "id_name": "urlsource",
        "value": [ "list" ]
      }
    },
    {
      "name": "",
      "id_name": "pagedurl",
      "type": "string",
      "placeholder": "http://...",
      "visible_if": {
        "id_name": "urlsource",
        "value": [
          "paged"
        ]
      }
    },
    {
      "name": "Scrape numbered pages",
      "id_name": "addpagenumbers",
      "type": "checkbox",
      "default": false,
      "visible_if": {
        "id_name": "urlsource",
        "value": [
          "paged"
        ]
      }
    },
    {
      "name": "Adds page numbers to the end of a URL like http://site.com/info?page=",
      "id_name": "paged",
      "type":"statictext",
      "visible_if": {
        "id_name": "addpagenumbers",
        "value": true
      }
    },
    {
      "name": "First page number",
      "id_name": "startpage",
      "type": "integer",
      "default": 0,
      "visible_if": {
        "id_name": "addpagenumbers",
        "value": true
      }
    },
    {
      "name": "Last page number",
      "id_name": "endpage",
      "type": "integer",
      "default": 9,
      "visible_if": {
        "id_name": "addpagenumbers",
        "value": true
      }
    },
    {
      "name": "Scrape",
      "id_name" : "version_select",
      "type": "custom"
    }
  ]
}

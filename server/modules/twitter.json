{
  "name": "Twitter",
  "id_name": "twitter",
  "category" : "Add data",
  "icon" : "twitter",
  "description" : "Load tweets and metadata for a user, a list of users or by searching Twitter for keywords.",
  "loads_data": true,
  "help_url":"modules/add-data/twitter",
  "parameters": [
    {
      "name": "Connect",
      "id_name": "twitter_credentials",
      "type": "secret"
    },
    {
      "name" : "Search for",
      "id_name" : "querytype",
      "type" : "menu",
      "menu_items" : "User tweets|Any tweet|Twitter list",
      "default": "0"
    },
    {
      "name": "",
      "id_name" : "query",
      "type": "string",
      "default": "",
      "placeholder":"Keywords to match",
      "visible_if": {
        "id_name": "querytype",
        "value": "Any tweet"
      }
    },
    {
      "name": "",
      "id_name" : "username",
      "type": "string",
      "default": "",
      "placeholder":"@UserName",
      "visible_if": {
        "id_name": "querytype",
        "value": "User tweets"
      }
    },
    {
      "name": "",
      "id_name" : "listurl",
      "type": "string",
      "default": "",
      "placeholder":"https://twitter.com/someuser/lists/somelist",
      "visible_if": {
        "id_name": "querytype",
        "value": "Twitter list"
      }
    },
    {
      "name": "Update",
      "id_name" : "version_select",
      "type": "custom"
    },
    {
      "name": "Accumulate tweets",
      "id_name": "accumulate",
      "type": "checkbox",
      "default": "True"
    }
  ]
}

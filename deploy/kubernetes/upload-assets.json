{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "migrate-$SHA"
  },
  "spec": {
    "restartPolicy": "Never",
    "terminationGracePeriodSeconds": 0,
    "serviceAccountName": "migrate-sa",
    "containers": [
      {
        "name": "migrate",
        "image": "gcr.io/workbenchdata-ci/upload-assets:$SHA",
        "env": [
          {
            "name": "CJW_PRODUCTION",
            "value": "True"
          },
          {
            "name": "PYTHONUNBUFFERED",
            "value": "1"
          },
          {
            "name": "CJW_DB_HOST",
            "value": "upload-needs-no-database"
          },
          {
            "name": "CJW_DB_PASSWORD",
            "value": "upload-needs-no-database"
          },
          {
            "name": "CJW_RABBITMQ_HOST",
            "value": "upload-needs-no-rabbitmq"
          },
          {
            "name": "CJW_SECRET_KEY",
            "value": "upload-needs-no-secret-key"
          },
          {
            "name": "CJW_MOCK_EMAIL",
            "value": "True"
          },
          {
            "name": "AWS_ACCESS_KEY_ID",
            "valueFrom": {
              "secretKeyRef": {
                "name": "gcs-s3-migrate-sa-credentials",
                "key": "AWS_ACCESS_KEY_ID"

              }
            }
          },
          {
            "name": "AWS_SECRET_ACCESS_KEY",
            "valueFrom": {
              "secretKeyRef": {
                "name": "gcs-s3-migrate-sa-credentials",
                "key": "AWS_SECRET_ACCESS_KEY"
              }
            }
          },
          {
            "name": "AWS_S3_ENDPOINT",
            "value": "https://storage.googleapis.com"
          },
          {
            "name": "_DOMAIN_NAME",
            "valueFrom": {
              "configMapKeyRef": {
                "name": "workbench-config",
                "key": "domainName"
              }
            }
          },
          {
            "name": "S3_BUCKET_NAME_PATTERN",
            "value": "%s.$(_DOMAIN_NAME)"
          }
        ]
      }
    ]
  }
}

.u-flex-flow-row
    // items are displayed one after the other, on the x axis
    flex-flow row
    flex-direction row
    box-orient horizontal

.u-flex-flow-column
    // items are displayed one after the other, on the y axis
    flex-flow column
    // flex-direction column
    box-orient vertical

.u-flex-row
    display flex
    @extend .u-flex-flow-row

.u-flex-column

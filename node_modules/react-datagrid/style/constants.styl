$base-color = #6EB8F1
$datagrid-header-border-style = solid
$datagrid-header-border-width = 1px
$datagrid-header-border-color = #A8A8A8
$datagrid-column-header-padding = 5px
$datagrid-cell-padding = $datagrid-column-header-padding

$datagrid-cell-border-width = 1px

$datagrid-cell-border-style = dotted
$datagrid-cell-border-color = $datagrid-header-border-color

// $datagrid-cell-border-style = solid
// $datagrid-cell-border-color = gray

$datagrid-cell-cursor = default
$datagrid-header-cursor = $datagrid-cell-cursor
$datagrid-row-odd-background = #F2F7FF
$datagrid-row-over-background = #D7E7FF
$datagrid-row-selected-background = #C4DBFC
$datagrid-group-row-background = #e6e6e6
$datagrid-group-row-over-background = darken($datagrid-group-row-background, 10%)

$datagrid-header-background = linear-gradient(to bottom, #f7f7f7 0%,#efefef 13%,#e6e6e6 100%)
$datagrid-header-over-background = linear-gradient(to bottom, lighten(#f7f7f7, 55%) 0%, lighten(#efefef, 55%) 13%, lighten(#e6e6e6, 55%) 100%)
$datagrid-column-header-font-weight = bold
$datagrid-column-sort-icon-width = 5px
$datagrid-column-sort-icon-height = 8px
$datagrid-column-sort-icon-color = $base-color
$datagrid-group-row-background = $datagrid-group-row-background
$datagrid-summary-row-background = $datagrid-header-background
$datagrid-column-menu-icon-width = 15px
$datagrid-column-menu-icon-hover-background = white
